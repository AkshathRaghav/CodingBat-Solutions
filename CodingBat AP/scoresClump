scoresClump - 


public boolean scoresClump(int[] scores) {
  
  boolean check ; 
  check =  false ; 
  for ( int i = 0 ; i < scores.length - 2 ; i++) { 
    if (( scores[i+1] - scores[i] <= 2 )&& (scores[i+2] - scores[i+1]) <= 2 && (scores[i+2] - scores[i]) <= 2 ) { 
      check = true ; 
    } 
  } 
  
  return check == true ; 
  
  
  
}
