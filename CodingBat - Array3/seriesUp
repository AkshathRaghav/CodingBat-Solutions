seriesUp

public int[] seriesUp(int n) {
  int n1 = 0 ; 
  for (int i = 1 ; i <= n ; i++ ) { 
    n1 += i ; 
  } 
    int[] check = new int[n1] ; 
  int count = 1,checker = 1; 
  int index = 0 ; 

  for (int i = 0 ; i < check.length ; i++ ) { 
    check[i] = count ; 
    if ( count >= checker) { 
      count = 0 ;
      checker++ ; 
      
    } 
    count++ ; 
    
  } 
  
  return check ; 


}
