array220 

public boolean array220(int[] nums, int index) {
   if ( nums.length > 1  && index < nums.length-1 ) { 
     if ( (double) nums[index+1] / 10.0 == (double) nums[index] ) { 
       return true ; 
     } 
     else { 
       return array220(nums, index + 1 ) ; 
     }
     
    }
    return false  ; 
}
